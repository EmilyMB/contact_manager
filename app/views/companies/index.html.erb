<h1>Listing companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td>
          <ul><%= link_to 'Show', company %></ul>
          <ul><%= link_to 'Edit', edit_company_path(company) %></ul>
          <ul><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p id="new_company"><%= link_to 'New Company', new_company_path %></p>
