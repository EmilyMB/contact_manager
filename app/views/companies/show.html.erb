<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<%= render 'phone_numbers/phone_numbers', phone_numbers: @company.phone_numbers %>
<%= render 'email_addresses/email_addresses', email_addresses: @company.email_addresses %>

<strong>Email addresses:</strong>
<ul>
  <% @company.email_addresses.each do |email| %>
  <li><%= email.address %> <%= link_to('edit', edit_email_address_path(email)) %>
    <%= link_to('delete', email_address_path(email), method: "delete") %></li>
    <% end %>
</ul>

<%= link_to 'Add phone number', new_phone_number_path(contact_id: @company.id, contact_type: "Company") %><br/>
<%= link_to 'Add email address', new_email_address_path(contact_id: @company.id, contact_type: "Company") %><br/>

<%= link_to 'Edit', edit_company_path(@company) %> |
